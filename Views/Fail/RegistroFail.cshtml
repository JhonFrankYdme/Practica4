@{
    ViewData["Title"] = "Registro de Fails";
}
@model Fail

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
   

    <div class="container h-100">
		  
          <h2 style="text-align: center; margin-top: 95px;">Registra el nuevo fail</h2>

          <form action="" method="post">        

            <div class="container h-100">

              <div class="form-group">
                <label asp-for="titulo"></label>
                <input type="text" asp-for="titulo" class="form-control" placeholder="Ingrese titulo del producto">
                <span asp-validation-for="titulo" class="text-danger"></span>  
              </div>
              <div class="form-group">
                <label asp-for="url_imagen"></label>
                <input type="text" asp-for="url_imagen" class="form-control" placeholder="Ingrese url de url_imagen">
                <span asp-validation-for="url_imagen" class="text-danger"></span>
              </div>
              @if (SignInManager.IsSignedIn(User))
                {<div class="form-group">
                <input type="hidden" asp-for="nom_usuario" value="@User.Identity.Name" class="form-control"/>
                </div>
                }    
                  <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button" class="btn btn-primary" style="margin-top: 20px;">Registrar</button>
                  </div>
            </div>
          </form>
          
        </div>
      </div>
    </div>
